# backend/Dockerfile
FROM node:18-alpine

WORKDIR /usr/src/app

# Copia os arquivos de dependência
COPY package*.json ./

# Instala as dependências
RUN npm install

# Copia a pasta do Prisma para gerar o cliente (IMPORTANTE)
COPY prisma ./prisma/

# Gera o cliente Prisma (binários do Linux)
RUN npx prisma generate

# Copia o restante do código fonte
COPY . .

# Builda o TypeScript (assume que seu script de build é "npm run build")
RUN npm run build

# Expõe a porta
EXPOSE 3000

# Comando de entrada: Roda as migrations e depois inicia o servidor
CMD ["sh", "-c", "npx prisma migrate deploy && npm start"]